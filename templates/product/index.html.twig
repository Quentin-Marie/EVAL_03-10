{% extends 'base.html.twig' %}

{% block title %}Nos oeuvres
{% endblock %}

{% block body %}
	<table>
		<thead>
			<tr>
				<th>Nom de l'oeuvre</th>
				<th>Artiste</th>
				<th>Photo</th>
				<th>Prix</th>
				<th>Commander</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>
						{{product.pictureName}}
					</td>
					<td>
						{{product.title}}
					</td>
					<td>
						<img src="{{ asset('upload/') }}{{ product.pictureSrc }}" width="300" alt="">
					</td>
					<td>
						{{product.price}}
					</td>
					<td>
						<a href="{{ path('add', {'id':product.id}) }}" class="btn btn-secondary">Ajouter au panier</a>
						{# {% if app.user and is_granted('ROLE_ADMIN') %} #}
							<a href="{{ path('supprimer', {'id':product.id}) }}" class="btn btn-secondary">Retirer l'oeuvre</a>
						{# {% endif %} #}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a class="btn btn-danger" href=" {{path('destroy')}} ">Effacer votre séléction</a>
{% endblock %}
