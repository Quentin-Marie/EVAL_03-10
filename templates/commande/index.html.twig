{% extends 'base.html.twig' %}

    {% block body %}
        <table>
            <thead>
                <tr>
                    <th>Nom de l'oeuvre</th>
                    <th>Artiste</th>
                    <th>Photo</th>
                    <th>Prix</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>
                            {{product.pictureName}}
                        </td>
                        <td>
                            {{product.title}}
                        </td>
                        <td>
                            <img src="{{ asset('upload/') }}{{ product.pictureSrc }}" width="300" alt="">
                        </td>
                        <td>
                            {{product.price}}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-danger" href=" {{path('acheter')}} ">Acheter</a>
    {% endblock %}
    